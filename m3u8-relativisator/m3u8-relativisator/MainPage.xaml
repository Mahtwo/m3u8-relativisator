<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="m3u8_relativisator.MainPage">

    <StackLayout VerticalOptions="EndAndExpand" Margin="20">
        <Label x:Name="label_sliderPath"/>
        <Slider x:Name="slider_path" ThumbColor="#C80096" MinimumTrackColor="#B400F0" MaximumTrackColor="#630084" IsEnabled="false" Margin="0,20" ValueChanged="ChoosenPathChanged"/>
        <Button x:Name="button_selectFile" Text="Select a file" CornerRadius="5" Clicked="SelectFile" HorizontalOptions="Center" FontSize="Medium" BackgroundColor="#423347" VerticalOptions="Center"/>
    </StackLayout>

</ContentPage>
